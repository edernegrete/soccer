@font-face
  font-family 'icomoon'
  src url('../fonts/icomoon.eot?fsikg1')
  src url('../fonts/icomoon.eot?#iefixfsikg1') format('embedded-opentype'),
 url('../fonts/icomoon.ttf?fsikg1') format('truetype'),
		url('../fonts/icomoon.woff?fsikg1') format('woff'),
		url('../fonts/icomoon.svg?fsikg1#icomoon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  color #0ac6ff
  font-family 'icomoon'
  speak none
  font-size 1.5em
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-twitter
  &:before
    content "\ea91"

.icon-github
  &:before
    content "\eab4"

.icon-linkedin
  &:before
    content "\eac9"

